<?xml version="1.0" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <prototype namespace="Heptacom\HeptaConnect\Package\Shopware6\" resource="../../">
            <exclude>../../Http/AdminApi/Action/Contract/**/*{Payload,Criteria}.php</exclude>
            <exclude>../../Http/AdminApi/Authentication/Exception/**</exclude>
            <exclude>../../Http/AdminApi/ErrorHandling/Exception/**</exclude>
            <exclude>../../Utility/**</exclude>
        </prototype>

        <instanceof id="Heptacom\HeptaConnect\Package\Shopware6\Http\AdminApi\ErrorHandling\Contract\JsonResponseValidatorInterface">
            <tag name="heptaconnect.package.shopware6.json_response_validator"/>
        </instanceof>
        <instanceof id="Heptacom\HeptaConnect\Package\Shopware6\Http\AdminApi\ErrorHandling\ErrorHandler">
            <bind key="$validators" type="tagged_iterator" tag="heptaconnect.package.shopware6.json_response_validator"/>
        </instanceof>

        <service
            id="Heptacom\HeptaConnect\Package\Shopware6\Http\AdminApi\Authentication\Contract\AuthenticationInterface"
            alias="Heptacom\HeptaConnect\Package\Shopware6\Http\AdminApi\Authentication\PortalNodeStorageAuthentication"
        />

        <service
            decorates="Heptacom\HeptaConnect\Package\Shopware6\Http\AdminApi\Authentication\Contract\AuthenticationInterface"
            id="Heptacom\HeptaConnect\Package\Shopware6\Http\AdminApi\Authentication\MemoryAuthenticationCache"
        >
            <argument type="service" id=".inner"/>
        </service>

        <service
            id="Heptacom\HeptaConnect\Package\Shopware6\Http\AdminApi\Contract\SyncAction\SyncPayloadInterceptorCollection"
        >
            <argument type="tagged_iterator" tag="heptaconnect.package.shopware6.admin_api.sync_payload_interceptor"/>
        </service>
        <service
            id="\Heptacom\HeptaConnect\Package\Shopware6\Http\AdminApi\PackageExpectation\Contract\PackageExpectationCollection"
        >
            <argument type="tagged_iterator" tag="heptaconnect.package.shopware6.admin_api.package_expectation"/>
        </service>
    </services>
</container>
